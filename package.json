{
  "name": "feishu-bot-webhook-action",
  "version": "1.0.11",
  "description": "call webhook for custom feishu bot",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/junka/feishu-bot-webhook-action.git"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "npx ncc build src/index.ts -o dist --source-map",
    "run": "node ./dist/index.js",
    "format": "npx prettier --write .",
    "test": "npx jest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg"
  },
  "keywords": [
    "bot",
    "feishu",
    "lark",
    "trending"
  ],
  "author": "junka",
  "license": "ISC",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "axios": "^1.7.1",
    "cheerio": "^1.0.0-rc.12",
    "https": "^1.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.0",
    "@vercel/ncc": "^0.38.1",
    "dotenv": "^16.4.5",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.0",
    "ts-jest": "^29.1.4",
    "tsc": "^2.0.4",
    "typescript": "^5.4.5"
  }
}
