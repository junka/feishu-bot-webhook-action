{
  "name": "feishu-bot-webhook-action",
  "version": "1.0.12",
  "description": "call webhook for custom feishu bot",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/junka/feishu-bot-webhook-action.git"
  },
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "npm run format:write && npm run build",
    "build": "npx ncc build src/index.ts -o dist --source-map",
    "run": "node ./dist/index.js",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "test": "npx jest",
    "lint": "npx eslint . -c .github/linters/.eslintrc.yml",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "keywords": [
    "bot",
    "feishu",
    "lark",
    "trending"
  ],
  "author": "junka",
  "license": "ISC",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "axios": "^1.7.1",
    "cheerio": "^1.0.0-rc.12",
    "https": "^1.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vercel/ncc": "^0.38.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "eslint-plugin-github": "^5.0.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-jsonc": "^2.16.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-yml": "^1.14.0",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.3.3",
    "prettier-eslint": "^16.3.0",
    "ts-jest": "^29.2.3",
    "tsc": "^2.0.4",
    "typescript": "^5.5.4"
  }
}
